// tsconfig.json
{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Change these settings
    "moduleResolution": "node",
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate sourcemaps for .d.ts
    "sourceMap": true,
    "outDir": "./dist", // Output to dist folder
    "noEmit": false, // Allow emission of files

    // Keep best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@thanhhoajs/thanhhoa": ["./src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}